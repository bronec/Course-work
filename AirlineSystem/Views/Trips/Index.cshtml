@model IEnumerable<AirlineSystem.Models.Trip>

@{
    ViewData["Title"] = "Trips";
}

<h1>
    Рейсы
    <a class="btn btn-success" asp-action="Create"><i class="fa fa-plus"></i> Добавить новое</a>
</h1>

<table class="table table-striped table-bordered" id="dataTable" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Route)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plane)
            </th>
            <th class="no-sort"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.AvailableSeats)*@
                    @Html.DisplayFor(modelItem => item.AvailableSeatsCount)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Route.ID)*@
                    @Html.DisplayFor(modelItem => item.RouteToString)
                    @*@item.Route.ToString()*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Plane.PlaneNum)
                </td>
                <td>
                    <a class="btn btn-light" asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-light" asp-action="Details" asp-route-id="@item.ID"><i class="fa fa-eye"></i></a>
                    <a class="btn btn-light" asp-action="Delete" asp-route-id="@item.ID"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
