@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<h1>Все роли</h1>

@if (Model.Any())
{
<a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
   asp-controller="administration">Добавить новую роль</a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Идентификатор роли : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="EditRole"
                   asp-controller="Administration" asp-route-id="@role.Id">
                    Редактировать
                </a>
                @if (@role.Name != "Admin")
                {
                    <a class="btn btn-danger" asp-action="DeleteRole"
                       asp-controller="Administration" asp-route-id="@role.Id">
                        Удалить
                    </a>
                }
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Роли еще не созданы
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Используйте кнопку ниже, чтобы создать роль
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="administration" asp-action="CreateRole">
                Создать роль
            </a>
        </div>
    </div>
}
