@model AirlineSystem.Models.Route

@{
    ViewData["Title"] = "Delete Route";
}



<h3>Вы уверены, что хотите удалить этот маршрут?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PickUp)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PickUp.City)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DropOff)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DropOff.City)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        @if (ViewBag.Message == null)
        {
            <span class="alert alert-warning"> @ViewBag.Message!</span>
        }
        else
        {
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Удалить" class="btn btn-danger" />
        }
    <a asp-action="Index" class="btn btn-secondary">Обратно к списку</a>
    </form>
</div>
